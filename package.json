{
  "name": "express-ejs-blog-sqlite",
  "version": "1.0.0",
  "description": "Express + EJS blog with SQLite, author/reader flows, comments, likes",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-db": "cat db_schema.sql | sqlite3 ${DATABASE_FILE:-database.db}",
    "clean-db": "rm -f ${DATABASE_FILE:-database.db}",
    "build-db-win": "sqlite3 %DATABASE_FILE% < db_schema.sql",
    "clean-db-win": "del %DATABASE_FILE%",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build-css": "tailwindcss -i ./public/main.css -o ./public/output.css",
    "css:watch": "tailwindcss -i ./public/main.css -o ./public/output.css --watch"
  },
  "author": "Ioannis",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "body-parser": "^1.20.2",
    "connect-sqlite3": "^0.9.13",
    "dotenv": "^16.4.5",
    "date-fns": "^3.0.6",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "joi": "^17.11.0",
    "postcss": "^8.4.32",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
